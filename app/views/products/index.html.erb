<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "The Best Products" %>

    <h1 class="font-bold text-8xl text-center font-sweety text-black">The Best Products</h1>

  <div id="products" class="min-w-full grid md:grid-cols-4 gap-8">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>
<br>
<div class="mt-4 w-full font-bold">  
  <%= link_to "Shop by category", categories_path, class: "text-xl font-bold text-black bg-blue-200 rounded-lg py-3 px-5" %>
</div>
</div>
