<div class="h-16  w-full fixed top-0 left-0 right-0 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 z-50 shadow-lg rounded-lg">
  <div class="max-w-7xl h-full mx-auto flex items-center justify-between px-6">
    <%= link_to root_path, class: "flex items-center gap-2 justify-between" do %>
      <%= image_tag("shop.png", class: "w-10 h-10 object-cover ") %>
      <span class="text-2xl font-bold text-white  px-4 tracking-wide">Ecommerce Violet Store</span>
    <% end %>

    <div class="flex items-center gap-4 px-4">
      <% if current_user %>
        <%= link_to "Sign Out", destroy_user_session_path, 
                    data: { turbo_method: :delete }, 
                    class: "px-4 py-2 text-white font-semibold bg-red-600 hover:bg-gray-700 rounded-lg border border-gray-200 shadow transition duration-300" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, 
                    class: "px-4 py-2 text-indigo-700 font-semibold bg-white hover:brightness-75 rounded-lg shadow border border-indigo-700 transition duration-300" %>
        <%= link_to "Sign Up", new_user_registration_path, 
                    class: "px-4 py-2 text-white font-semibold hover:bg-black hover:brightness-75  rounded-lg shadow transition duration-300 border border-gray-200" %>
      <% end %>
    </div>
  </div>
</div>
